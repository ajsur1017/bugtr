<html>
<%- include("./partials/head.ejs") %>

    <body>

        <div class="container">
            <h1>Budgtr Index</h1>
<% let bankAccount = 0 %>
<% for (let i = 0; i < budget.length; i++) { %>
    <% const amounts = budget[i].amount; %>
    <% bankAccount += amounts; %>    
<% } %>
            <h5>Total in Account: $<%= bankAccount %></h5>
            <table>
                <% for(let i=0; i < budget.length; i++) { %>
                    <tr>
                        <td>
                            <%= budget[i].date %>
                        </td>
                        <td><a href="/budgets/<%=i%>">
                                <%= budget[i].name %>
                            </a></td>
                        <td>
                            <%= budget[i].amount %>
                        </td>

                        <% } %>

            </table>
            <form method="get" action="/budgets/new">
                <button type="submit">New</button>
            </form>


        </div>

    </body>

</html>